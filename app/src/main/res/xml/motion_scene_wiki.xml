<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/main_fragment"
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:duration="1000">

        <OnClick motion:targetId="@id/wiki_button" />

        <OnSwipe
            motion:dragDirection="dragEnd"
            motion:touchAnchorId="@+id/input_layout"
            motion:touchAnchorSide="start" />

    </Transition>
</MotionScene>